# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=ai_tutor_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# E2E Encryption Configuration
# Set to 'true' to enable end-to-end encryption for all API calls
# Note: E2E encryption is optional for web clients
ENCRYPTION_ENABLED=true
# Secret key for encryption (base64 encoded) - will be auto-generated if not set
# Store this securely once generated!
ENCRYPTION_SECRET_KEY=

# Claude AI (Anthropic) Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key

# Firebase Configuration (Push Notifications - FCM V1 API)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_SERVICE_ACCOUNT_PATH=
FIREBASE_SENDER_ID=your-firebase-sender-id

# Razorpay Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=ai-tutor-uploads

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (comma-separated list of allowed origins)
# Include both mobile and web app origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:8080,http://localhost:8081

# ========================================
# WEB APP CONFIGURATION
# ========================================

# Enable/Disable web support (default: true)
WEB_ENABLED=true

# Cookie Configuration (for web authentication)
COOKIE_SECRET=your-cookie-secret-change-in-production
# Cookie domain (leave empty for localhost in development)
COOKIE_DOMAIN=

# CSRF Protection (recommended for production web apps)
# Set to 'true' to enable CSRF protection
CSRF_ENABLED=false

# ========================================
# Logging
# ========================================
LOG_LEVEL=debug
